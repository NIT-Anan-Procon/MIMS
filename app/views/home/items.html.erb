<%= form_tag( { action: :items}) do %>
Event Key
<%= text_field_tag :e_key%>
<%= submit_tag '送信' %>
<% end %>

<table border="1">
  <div class="bs-docs-section">

    <div class="row">
      <div class="col-lg-12">
        <div class="page-header">
          <h1 id="tables">SeeK</h1>
        </div>

        <div class="bs-component">
          <table class="table table-striped table-hover ">
            <thead>
              <tr>
                <th>Item Name</th>
                <th>Category</th>
                <th>Event key</th>
                <th>Finder</th>
								<th>Image</th>
              </tr>
            </thead>
            <tbody>

							<% if @items != nil%>
							<% @items.each do |i| %>
  					  <tr>
    					  <td>
      				  <%= link_to i.i_name, controller: "home", action: "item_detail", id: i.id %>
     					 </td>
     					 <td>
     					   <%= i.category %>
     					 </td>
		 					  <td>
    					    <%= link_to Event.where(e_key: i.e_key).first.e_name, controller: "events", action: "event_detail", e_key: i.e_key %>
     						 </td>
   						   <td>
       						 <%= i.f_name%>
    					  </td>
    					  <td>
    					    <%= image_tag(url_for(action: 'get_image' , id: i.id), size: '100x100')%>
    					    <%= i.id %>
   					   </td>
    					  <% if @a_right == true then%>
    				    <td>
      		      <%= button_to "DLEATE",{:action => "delete" , id: i.id ,e_key: i.e_key }, :confirm => "本当に削除しますか？" %>

     				   </td>
 					     <% end %>
   					 </tr>
 						 <% end %>
						 <% end %>

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

</table>

  <div class="bs-docs-section">
    <div class="page-header">
      <div class="row">
        <div class="col-lg-12">
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-6">

        <p class="bs-component">
          <a href='../upload_page' class="btn btn-primary">UPLOAD PAGE</a>
					<a href='../eventer' class="btn btn-success">EVENTER PAGE</a>
				</p>
