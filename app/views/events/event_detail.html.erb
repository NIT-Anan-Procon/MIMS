  <% @event.each do |e| %>
    <h1><%= e.e_name %></h1>
    <b>Host is <%= e.e_host %></b>

<style type= "text/css">
		p.br { word-break: break-all; }
</style>
    <div class="row">
      <div class="col-lg-12">

        <div class="bs-component">
          <table class="table table-striped table-hover ">
            <tbody>
              <tr class="success">
                <td>Location</td>
                <td>
									<a <%= "href=https://www.google.co.jp/maps/search/#{e.e_location}" %> ><%= e.e_location %></a>
								</td>
              </tr> 
              <tr class="warning">
                <td>Event Detail</td>
                <td> <p class="br">
									<%= e.e_detail %>
									</p>
								</td>
              </tr>
            </tbody>
          </table> 
      </div>
    </div>
  </div>

	<% end %>

	<div class="form-group">
		<p class="bs-component">
			<a href="/home/items" class="btn btn-warning">ITEMS PAGE</a>


